<Application x:Class="WpfApp1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Page/Dashboard.xaml">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Main Material Theme -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                     PrimaryColor="Blue" 
                                     SecondaryColor="Amber" />

                <!-- Correct defaults file for all new versions -->
                
            </ResourceDictionary.MergedDictionaries>

            <!-- GLOBAL WINDOW STYLE FOR LIGHT THEME -->
            <Style TargetType="Window">
                <Setter Property="Background" Value="#F5F7FA"/>
                <Setter Property="Foreground" Value="#202223"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>
            
            <Style TargetType="Button" x:Key="HoverButton">
                <Setter Property="Background" Value="#FF79B4B2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Padding" Value="10 5"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF5FA39E"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- STATUS CHIPS (LIGHT COLORS) -->
            <Style x:Key="ChipSuccess" TargetType="Border">
                <Setter Property="Background" Value="#DEF9E9"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="6 3"/>
            </Style>

            <Style x:Key="ChipPending" TargetType="Border">
                <Setter Property="Background" Value="#FFF4CC"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="6 3"/>
            </Style>

            <Style x:Key="ChipFailed" TargetType="Border">
                <Setter Property="Background" Value="#FFE5E5"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="6 3"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>

</Application>
