    <Grid Background="#F5F6FA" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SideMenuColumn" Width="0"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== SIDEBAR ===================== -->
        <Border x:Name="SideMenu" Background="#4A3AFF" CornerRadius="25" Margin="0 10 25 10">
            <StackPanel Margin="20">
                <TextBlock Text="Dashboard" Foreground="White"
                       FontSize="26" FontWeight="Bold" Margin="0 20"/>

                <!-- Sidebar Icons -->
                <Button Content="🏠   Home" Style="{StaticResource NavButton}" Margin="0 10" Background="#FF4A3AFF" />
                <Button Content="📤   Outward" Style="{StaticResource NavButton}" Margin="0 10" Background="#FF4A3AFF"/>
                <Button Content="📥   Inward" Style="{StaticResource NavButton}" Margin="0 10" Background="#FF4A3AFF"/>
                <Button Content="📂   Files" Style="{StaticResource NavButton}" Margin="0 10" Background="#FF4A3AFF"/>
                <Button Content="⚙   Settings" Style="{StaticResource NavButton}" Margin="0 10" Background="#FF4A3AFF"/>

                <StackPanel VerticalAlignment="Bottom" Margin="0 50 0 0">
                    <Button Content="🚪  Logout" Style="{StaticResource NavButton}" Background="#FF4A3AFF" />
                </StackPanel>
            </StackPanel>
        </Border>
        
        <ScrollViewer Grid.Column="1"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="10">
            <!-- ===================== MAIN AREA ===================== -->
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- ============= TOP HEADER ============= -->
            <DockPanel Margin="10 0 0 20">
                        <Button   Width="35" Height="35"
                        BorderThickness="0"
                        Cursor="Hand"
                          Click="MenuBtn_Click" BorderBrush="{x:Null}" Background="{x:Null}">

                        <TextBlock Text="≡"
                                   Foreground="#FF090000"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                    <TextBlock Text="Primary Dashboard"
                       FontSize="24" FontWeight="Bold"
                       VerticalAlignment="Center"/>

                    <TextBlock Width="200" Height="35" Margin="20 0" x:Name="txtDateTime"

                     DockPanel.Dock="Right" VerticalAlignment="Center"
                     
                     Background="White" Padding="10"/>

                <Ellipse Width="40" Height="40" DockPanel.Dock="Right"
                     Fill="LightGray" Margin="10 0"
                     VerticalAlignment="Center"/>
            </DockPanel>

            <!-- ============= OVERVIEW ROW ============= -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- BIG OVERVIEW CARD -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="0" 
                    Background="{StaticResource PurpleGradient}">
                    <StackPanel>
                        <TextBlock Text="Overview" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Monthly Activity" Foreground="#EAEAEA" Margin="0 5"/>

                        <!-- Placeholder for Line Graph -->
                        <Border Height="160" Background="#3F2FC0" CornerRadius="15" Margin="0 10" Padding="10">
                            <Grid>

                                <!-- Background Grid Lines -->
                                <Canvas>
                                    <Line X1="0" Y1="30" X2="600" Y2="30" Stroke="#4F44A9" StrokeThickness="1" />
                                    <Line X1="0" Y1="60" X2="600" Y2="60" Stroke="#4F44A9" StrokeThickness="1" />
                                    <Line X1="0" Y1="90" X2="600" Y2="90" Stroke="#4F44A9" StrokeThickness="1" />
                                    <Line X1="0" Y1="120" X2="560" Y2="120" Stroke="#4F44A9" StrokeThickness="1" />
                                </Canvas>

                                <!-- ACTUAL GRAPH LINE -->
                                <Path Stroke="#FF93A9" StrokeThickness="3" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="10,120">
                                                <!-- Y values (lower = high value) -->
                                                <BezierSegment Point1="80,90" Point2="120,50" Point3="180,60" />
                                                <BezierSegment Point1="240,70" Point2="290,40" Point3="340,80" />
                                                <BezierSegment Point1="380,120" Point2="440,90" Point3="520,60" />
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>

                                <!-- SMALL CIRCLES ON POINTS -->
                                <Ellipse Width="8" Height="8" Fill="#FF6B88" Margin="75,85,0,0" HorizontalAlignment="Left"/>
                                <Ellipse Width="8" Height="8" Fill="#FF6B88" Margin="175,55,0,0" HorizontalAlignment="Left"/>
                                <Ellipse Width="8" Height="8" Fill="#FF6B88" Margin="335,75,0,0" HorizontalAlignment="Left"/>
                                <Ellipse Width="8" Height="8" Fill="#FF6B88" Margin="515,55,0,0" HorizontalAlignment="Left"/>

                            </Grid>
                        </Border>


                        <StackPanel Orientation="Horizontal" Margin="0 10">
                            <StackPanel Width="120">
                                <TextBlock Text="Total Time" Foreground="White" />
                                <TextBlock Text="748 Hr" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Width="120">
                                <TextBlock Text="Total Steps" Foreground="White" />
                                <TextBlock Text="9,178 St" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Width="120">
                                <TextBlock Text="Target" Foreground="White" />
                                <TextBlock Text="9200 St" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- DAILY JOGGING CARD -->
                <Border Style="{StaticResource CardStyle}" Grid.Column="1"
                    Background="{StaticResource PinkGradient}">
                    <StackPanel>
                        <TextBlock Text="Daily Status" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Listener Status" Foreground="#FCECEC" Margin="0 3"/>

                        <Border Background="#FF476A" CornerRadius="10" Padding="10" Margin="0 10">
                            <TextBlock Text="Not Connected" Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ============= STATS CARDS ROW ============= -->
            <Grid Grid.Row="2" Margin="13 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- ==================== LEFT SIDE CARDS ==================== -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ===================== TOP 2 CARDS ===================== -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- CARD 1 : Inward -->
                        <Border Style="{StaticResource CardStyle}" Height="100" Margin="0 0 10 10" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                    <TextBlock Text="⬆" Foreground="#6A5AE0" FontSize="20" Margin="0 0 6 0"/>
                                    <TextBlock Text="Inward Files Today" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Text="134"
                           FontSize="26" FontWeight="Bold"
                           Foreground="#6A5AE0"/>
                            </StackPanel>
                        </Border>

                        <!-- CARD 2 : Outward -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Height="100" Margin="10 0 0 10" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                    <TextBlock Text="⬇" Foreground="#FF6B88" FontSize="20" Margin="0 0 6 0"/>
                                    <TextBlock Text="Outward Files Today" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Text="98"
                           FontSize="26" FontWeight="Bold"
                           Foreground="#FF6B88"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- ===================== CARD 3 : Success Rate ===================== -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Height="130" Margin="0 10 0 0" Padding="15">
                        <StackPanel HorizontalAlignment="Center">

                            <StackPanel Orientation="Horizontal" Margin="0 0 0 5" HorizontalAlignment="Center">
                                <TextBlock Text="✔"
                           Foreground="#32B768"
                           FontSize="20"
                           Margin="0 0 6 0"/>
                                <TextBlock Text="Success Rate" FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="91%"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#32B768"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"/>

                            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="91"
                         Height="10"
                         Width="150"
                         Foreground="#32B768"
                         Background="#E8F5E9"
                         BorderBrush="Transparent"/>
                        </StackPanel>
                    </Border>

                </Grid>


                <Border Grid.Column="1"
                            CornerRadius="20"
                            Background="White"
                            Padding="20"
                            Effect="{StaticResource CardShadow}"
                            Margin="20 0 10 0">
                    
                        <lvc:PieChart Name="PieChart" 
                                      InnerRadius="60"
                                      LegendLocation="Right"
                                      Foreground="#3F2FC0"
                                      FontSize="14"/>
                    </Border>

            </Grid>

            <!-- ===================== DATA GRID SECTION ===================== -->
            <Border Grid.Row="3"
                    Style="{StaticResource CardStyle}"
                    Background="White"
                    CornerRadius="15"
                    Padding="15"
                    Margin="13 20 0 0">

                <DataGrid x:Name="TransactionGrid"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              Background="White"
                              RowHeight="38"
                              ColumnHeaderHeight="42"
                          GridLinesVisibility="None"
                              BorderBrush="#DDD"
                              BorderThickness="0"
                              CanUserAddRows="False"
                              CanUserResizeRows="False"
                              CanUserReorderColumns="False"
                              FontSize="14"
                              Foreground="#333">

                    <!-- ========== COLUMNS ========== -->
                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Date"
                                Width="160"
                                Binding="{Binding Date}" />

                        <DataGridTextColumn Header="Type"
                                Width="140"
                                Binding="{Binding Type}" />

                        <DataGridTextColumn Header="File Name"
                                Width="*"
                                Binding="{Binding FileName}" />

                        <DataGridTextColumn Header="Records"
                                Width="100"
                                Binding="{Binding Records}" />

                        <!-- STATUS CHIP -->
                        <DataGridTemplateColumn Header="Status" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#D1F5E1"
                                CornerRadius="10"
                                Padding="5 2">
                                        <TextBlock Text="{Binding Status}"
                                       Foreground="#2C7A4B"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- ACK CHIP -->
                        <DataGridTemplateColumn Header="Ack" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF5CC"
                                CornerRadius="10"
                                Padding="5 2">
                                        <TextBlock Text="{Binding Ack}"
                                       Foreground="#9A6D1F"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Posting"
                                Width="100"
                                Binding="{Binding Posting}" />

                    </DataGrid.Columns>
                </DataGrid>
            </Border>

        </Grid>
        </ScrollViewer>
    </Grid>
        
</Window>
