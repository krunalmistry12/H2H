
        <Window x:Class="WpfApp1.Page.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Page"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
            WindowStartupLocation="CenterScreen">

    <Grid Margin="30">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL (Mock placeholder for image) -->
        <Border Grid.Column="0" CornerRadius="20"
                BorderBrush="#DFF3E8" BorderThickness="6"
                Background="White" Padding="20" Margin="0 30 20 30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Smart NACH Products" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="#4F4F4F" HorizontalAlignment="Center"/>
                <TextBlock Text="(Graphic Mock Placeholder)" 
                           FontSize="16" Foreground="Gray"
                           Margin="0 10 0 0" HorizontalAlignment="Center"/>

                <!-- Circle container mimic -->
                <Ellipse Width="250" Height="250" Fill="#F3F7FD" Margin="0 30" />
            </StackPanel>
        </Border>

        <!-- RIGHT PANEL (Login Box) -->
        <Border Grid.Column="1" CornerRadius="15" Background="White" 
                BorderBrush="#E6E6E6" BorderThickness="1"
                Padding="30" Margin="20,30,0,30" >

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Welcome" FontSize="30" 
                           FontWeight="Bold" Foreground="#333" />
                <TextBlock Text="SmartNACH H2H"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="#555" Margin="0 5 0 10" />
                <TextBlock Text="Sign in to your account to continue"
                           FontSize="14" Foreground="Gray" Margin="0 0 0 25"/>

                <!-- Username -->
                <TextBlock Text="Username" FontWeight="Bold" Margin="0 10 0 5" />
                <TextBox Height="35" 
                         Padding="10"
                         Background="#F7F7F7" BorderBrush="#D3D3D3"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="Bold" Margin="0 15 0 5" />
                <PasswordBox Height="35" 
                             Padding="10"
                             Background="#F7F7F7" BorderBrush="#D3D3D3"/>

                <!-- Sign-in Button -->
                <Grid Margin="0 25 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Sign In" Height="40" 
                            Foreground="White" Cursor="Hand"
                            FontWeight="Bold" Margin="0 0 10 0">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#007BFF" Offset="0"/>
                                <GradientStop Color="#005BEA" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button Grid.Column="1" Content="Cancel" Height="40"
                            FontWeight="Bold" Cursor="Hand"
                            BorderBrush="#C0C0C0" Background="White" />
                </Grid>

                <TextBlock Text="Version 3.0 | © 2025 Soft Tech Solutions"
                           FontSize="12" Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0 20 0 0"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
